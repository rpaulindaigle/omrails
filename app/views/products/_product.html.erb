<% if current_user == product.user || current_user.admin? %>
 <tr>
 <td><%= link_to (image_tag product.image(:medium)), product %></td>
   
        <td><%= product.description %></td>
          <td><%= product.brand %></td>
        <td><%= product.sale_price %></td>
        <td><%= link_to product.user.name, product.user %></td>
        <td><%= link_to 'View', product_path(product), class: "btn btn-small" %><%= link_to 'Edit', edit_product_path(product), class: "btn btn-small" %><br><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
        <td></td>
        <% end %>
    </tr>