<%= simple_form_for(@product, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  	<%= f.input :image, label: "Upload an image" %>
    <%= f.input :description, label: "Product name", as: :text, input_html: { rows: "2" } %>
    <%= f.input :brand, label: "Brand", as: :text, input_html: { rows: "1" } %>
    <%= f.input :price, label: "Regular price", as: :text, input_html: { rows: "1" } %>
    <%= f.input :sale_price, label: "Sale price", as: :text, input_html: { rows: "1" } %>
    <%= f.input :material, label: "Material", as: :text, input_html: { rows: "1" } %>


  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-danger" %>
  </div>
<% end %>
