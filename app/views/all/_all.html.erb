 <%= link_to (image_tag product.image, width: "40px"), edit_approval_path(product) %>
  <p class="description">
    <%= product.description %>
  </p>
  <p>
    <strong>
      Sold by <%= product.user.name %>
    </strong>
  </p>
  <% if product.approved? %>
    <div class="approved">
      <p>
        Approved
      </p>
    </div>
  <% else %>
    <div class="approval">
      <p>
        Needs approval: <%= link_to 'Approve?', edit_approval_path(product) %>
      </p>
    </div>
    
  <% end %>